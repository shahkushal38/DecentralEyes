{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always", // Auto-fix ESLint issues on save
      "source.fixAll.eslint": "always"
    },
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact"
    ],
    "prettier.requireConfig": true // Ensure Prettier respects your .prettierrc file
  }
  